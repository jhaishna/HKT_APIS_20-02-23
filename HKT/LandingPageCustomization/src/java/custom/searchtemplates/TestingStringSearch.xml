<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
   Template to search /strings table to fetch the reason codes
-->
<searchTemplate xmlns="http://xmlns.oracle.com/cgbu/schemas/BusinessObjs">
    <returnStorableClass>/strings</returnStorableClass>
    <defaultStepSize>200</defaultStepSize>
    <globalSearch>true</globalSearch>
    <searchcriterias>
        <criteria name="Domain">
            <label>Domain</label>
            <field>FldDomain</field>
            <storableClass>/strings</storableClass>   
        </criteria>  
        <criteria name="Locale">
            <label>Locale</label>
            <field>FldLocale</field>
            <storableClass>/strings</storableClass>   
        </criteria>       
    </searchcriterias>
    <searchresults>
        <result name="Domain">
            <field>FldDomain</field>
        </result> 
        <result name="DomainID">
            <field>FldStrVersion</field>
        </result>
        <result name="Reason">
            <field>FldString</field>
</result>
        <result name="Description">
            <field>FldHelpString</field>
        </result>          
    </searchresults>
</searchTemplate>
